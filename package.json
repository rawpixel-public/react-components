{
  "name": "@rawpixel-public/react-components",
  "version": "0.6.9",
  "description": "RawPixel React component library",
  "license": "MIT",
  "repository": "git://github.com/rawpixel-public/react-components",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "rollup -c",
    "deploy": "gh-pages -d storybook/storybook-static",
    "prepare": "yarn run build",
    "predeploy": "cd storybook && yarn install && yarn run build",
    "prepublishOnly": "yarn run lint && yarn run test",
    "lint": "eslint ./src && prettier --check \"src/**/*.js\"",
    "lint:fix": "eslint ./src --fix && prettier --write \"src/**/*.js\"",
    "start": "rollup -c -w",
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:coverage": "yarn run test --coverage",
    "test:watch": "react-scripts test --env=jsdom"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0",
    "react-router": "^3.2.5",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-url": "^4.0.2",
    "@svgr/rollup": "^5.2.0",
    "@testing-library/dom": "^6.12.2",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "10.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-styled-components": "^1.10.7",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^7.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "14.1.0",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "4.0.1",
    "gh-pages": "^2.2.0",
    "pre-commit": "1.1.3",
    "prettier": "^1.19.1",
    "react": "^16.8.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.8.0",
    "react-is": "^16.12.0",
    "react-router": "^3.2.5",
    "react-scripts": "^3.4.0",
    "react-test-renderer": "^16.13.0",
    "rollup": "^1.31.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "styled-components": "^5.0.1",
    "styled-tools": "^1.7.1"
  },
  "files": [
    "dist"
  ]
}
